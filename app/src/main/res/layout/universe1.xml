<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zoomView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundv2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">



            <!--    guidelines used for layout-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guideline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.12" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".35" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".55" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".60" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/left_guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent=".90" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/bottom_guideline5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.27" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/bottom_guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".11" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/bottom_guideline6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".13" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/bottom_guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".60" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/bottom_guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".45" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/bottom_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent=".75" />


            <ImageView
                android:id="@+id/farm1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@drawable/planet1"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintStart_toStartOf="@id/left_guideline"
                app:layout_constraintTop_toTopOf="@id/bottom_guideline6"
                app:layout_constraintWidth_percent="0.19" />

            <ImageView
                android:id="@+id/farm3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:contentDescription="@string/planet2"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@drawable/ic_planet_1_final"
                app:layout_constraintHeight_percent="0.13"
                app:layout_constraintStart_toStartOf="@id/left_guideline2"
                app:layout_constraintTop_toTopOf="@id/bottom_guideline5"
                app:layout_constraintWidth_percent="0.23" />

            <ImageView
                android:id="@+id/farm5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@drawable/ic_planet_2_final"
                app:layout_constraintHeight_percent="0.13"
                app:layout_constraintStart_toStartOf="@id/left_guideline3"
                app:layout_constraintTop_toTopOf="@id/bottom_guideline3"
                app:layout_constraintWidth_percent="0.23" />

            <ImageView
                android:id="@+id/farm8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@drawable/ic_planet_3_final"
                app:layout_constraintHeight_percent="0.14"
                app:layout_constraintStart_toStartOf="@id/left_guideline4"
                app:layout_constraintTop_toTopOf="@+id/bottom_guideline"
                app:layout_constraintWidth_percent="0.25"
                tools:layout_editor_absoluteY="500dp" />

            <ImageView
                android:id="@+id/farm2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@drawable/ic_planet_5"
                app:layout_constraintHeight_percent="0.11"
                app:layout_constraintStart_toStartOf="@+id/left_guideline4"
                app:layout_constraintTop_toTopOf="@id/bottom_guideline4"
                app:layout_constraintWidth_percent="0.21" />

            <ImageView
                android:id="@+id/farm4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@drawable/ic_planet_6"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintStart_toStartOf="@id/left_guideline6"
                app:layout_constraintTop_toTopOf="@id/bottom_guideline3"
                app:layout_constraintWidth_percent="0.2" />

            <ImageView
                android:id="@+id/farm6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="148dp"
                android:layout_marginLeft="148dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@drawable/ic_planet_7"
                app:layout_constraintHeight_percent="0.09"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/bottom_guideline2"
                app:layout_constraintWidth_percent="0.16" />

            <ImageView
                android:id="@+id/farm7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="68dp"
                android:layout_marginLeft="68dp"
                android:adjustViewBounds="true"
                android:scaleX="1"
                android:scaleY="1"
                android:src="@drawable/ic_planet_4"
                app:layout_constraintHeight_percent="0.13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/bottom_guideline"
                app:layout_constraintWidth_percent="0.23" />

            <ImageView
                android:id="@+id/satellite1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="true"
                android:focusable="true"
                android:rotation="45"
                android:src="@drawable/ic_harvester"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintStart_toEndOf="@id/farm1"
                app:layout_constraintTop_toTopOf="@id/bottom_guideline6"
                app:layout_constraintWidth_percent="0.1" />

            <ImageView
                android:id="@+id/satellite3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="true"
                android:focusable="true"
                android:rotation="45"
                android:src="@drawable/ic_harvester"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintStart_toEndOf="@id/farm3"
                app:layout_constraintTop_toTopOf="@id/bottom_guideline5"
                app:layout_constraintWidth_percent="0.1" />

            <ImageView
                android:id="@+id/satellite5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="true"
                android:focusable="true"
                android:rotation="45"
                android:src="@drawable/ic_harvester"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintStart_toEndOf="@id/farm5"
                app:layout_constraintTop_toTopOf="@id/bottom_guideline3"
                app:layout_constraintWidth_percent="0.1" />

            <ImageView
                android:id="@+id/satellite8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="1dp"
                android:layout_marginRight="1dp"
                android:clickable="true"
                android:focusable="true"
                android:rotation="45"
                android:src="@drawable/ic_harvester"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintStart_toEndOf="@id/farm8"
                app:layout_constraintTop_toTopOf="@id/bottom_guideline"
                app:layout_constraintWidth_percent="0.1" />

            <ImageView
                android:id="@+id/satellite2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:clickable="true"
                android:focusable="true"
                android:rotation="45"
                android:src="@drawable/ic_harvester"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintStart_toEndOf="@id/farm2"
                app:layout_constraintTop_toTopOf="@id/bottom_guideline4"
                app:layout_constraintWidth_percent="0.1" />

            <ImageView
                android:id="@+id/satellite4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="true"
                android:focusable="true"
                android:rotation="45"
                android:src="@drawable/ic_harvester"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintStart_toEndOf="@+id/farm4"
                app:layout_constraintTop_toTopOf="@id/bottom_guideline3"
                app:layout_constraintWidth_percent="0.1" />

            <ImageView
                android:id="@+id/satellite6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="showPopup"
                android:rotation="45"
                android:src="@drawable/ic_harvester"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintStart_toEndOf="@id/farm6"
                app:layout_constraintTop_toTopOf="@id/bottom_guideline2"
                app:layout_constraintWidth_percent="0.1" />

            <ImageView
                android:id="@+id/satellite7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:clickable="true"
                android:focusable="true"
                android:rotation="45"
                android:src="@drawable/ic_harvester"
                app:layout_constraintHeight_percent="0.1"
                app:layout_constraintStart_toEndOf="@id/farm7"
                app:layout_constraintTop_toTopOf="@id/bottom_guideline"
                app:layout_constraintWidth_percent="0.1" />

</androidx.constraintlayout.widget.ConstraintLayout>